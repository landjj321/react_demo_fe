{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}